<h1>Add a New Figure</h1>

 <form action="/figures" method="post">
   <label> Figure Title: </label>
   <input type="text" name="figure[name]" id="figure_name" />
   <br></br>

   <label> Select an existing landmark: </label>

   <% @landmarks.each do |landmark| %>
     <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" />
     <%= landmark.name %>
   <% end %>
   <br></br>

   <label>and/or, create a landmark:</label>
   <br></br>
   <label>Landmark Name:</label>
     <input  type="text" name="landmark[name]" id="new_landmark"/>
   <br></br>


   <label> Select an existing title: </label>

   <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]"
    id="title_<%= title.id %>" value="<%=title.id%>" />
    <%= title.name %>
   <% end %>
   <br></br>

   <label>and/or, create a title:</label>
   <br></br>
   <label>Name:</label>
     <input type="text" name="title[name]" id="new_title"/>
   <br></br>

   <input type="submit" value="Create New Figure">
</form>
